  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Omochikun55/quiz-validator.git"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
