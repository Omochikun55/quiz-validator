{
  "name": "@omochikun/quiz-validator",
  "version": "1.0.0",
  "description": "Validation library for quiz and question data with customizable rules and detailed error reporting",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
