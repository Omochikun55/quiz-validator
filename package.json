{
  "name": "@omochikun/quiz-validator",
  "version": "1.1.0",
  "description": "Validation library for quiz and question data with customizable rules and detailed error reporting",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "quiz-validator": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts",
    "build:cli": "tsup src/cli.ts --format cjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "quiz",
    "question",
    "validation",
    "validator",
    "test",
    "exam",
    "assessment",
    "education"
  ],
  "author": "Omochikun55",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Omochikun55/quiz-validator.git"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "chart.js": "^4.4.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
